# Kerb's Sway config
# Read `man 5 sway` for a complete reference.

### Variables
set $mod Mod4
set $altmod Mod1
set $left h
set $down j
set $up k
set $right l
set $terminal foot
set $menu fuzzel
set $browser librewolf
set $music-player $terminal -T "rmpc - Music Player" -e rmpc
 
set $session-lock ~/.local/bin/lock
set $screenshot ~/.local/bin/take-screenshot

### Output configuration
# Read 'man 5 sway-output'
output * {
    scale 1
}

# Set wallpapers.
exec ~/.local/bin/setbg >/dev/null 2>&1

#
# Input configuration
# Read 'man 5 sway-input'
#
    input * {
	repeat_delay 300
	repeat_rate 45
    }

    input type:touchpad {
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
	scroll_factor 0.5
    }

    input type:pointer {
	pointer_accel -0.3
    }

    seat * hide_cursor 3000

#
# Key bindings
#

    # Start a terminal
    bindsym $mod+Return exec $terminal

    # Kill focused window
    bindsym $mod+q kill

    # Start your launcher
    bindsym $mod+d exec $menu

    # Lock Session
    bindsym $mod+Shift+l exec $session-lock

    # Launch system action dialogue
    bindsym $mod+Backspace exec ~/.local/bin/sysaction

    # Manage Audio Devices
    for_window [title="pulsemixer window"] floating enable; resize set width 60 ppt height 50 ppt
    bindsym $mod+O exec $terminal -T "pulsemixer window" -e pulsemixer >/dev/null 2>&1

    # Reload the configuration file
    bindsym $mod+$altmod+Shift+C reload

    # Launch web browser
    bindsym $mod+W exec librewolf

    # Launch music player
    bindsym $mod+M exec $music-player

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+$altmod+Shift+Q exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

#
# MPD Control
#

    # Toggle Pause/Play
    bindsym $mod+P exec mpc -q toggle

    # Play next song in queue
    bindsym $mod+bracketright exec mpc -q next

    # Play previous song in queue
    bindsym $mod+bracketleft exec mpc -q prev


#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Move the focused window with the same, but add Shift
    bindsym $mod+$altmod+$left move left
    bindsym $mod+$altmod+$down move down
    bindsym $mod+$altmod+$up move up
    bindsym $mod+$altmod+$right move right
#
# Workspaces:
#
    # Defalut layout
    workspace_layout default

    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10
    # Move focused container to workspace
    bindsym $mod+$altmod+1 move container to workspace number 1
    bindsym $mod+$altmod+2 move container to workspace number 2
    bindsym $mod+$altmod+3 move container to workspace number 3
    bindsym $mod+$altmod+4 move container to workspace number 4
    bindsym $mod+$altmod+5 move container to workspace number 5
    bindsym $mod+$altmod+6 move container to workspace number 6
    bindsym $mod+$altmod+7 move container to workspace number 7
    bindsym $mod+$altmod+8 move container to workspace number 8
    bindsym $mod+$altmod+9 move container to workspace number 9
    bindsym $mod+$altmod+0 move container to workspace number 10
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

#
# Layout stuff:
#

    # Removes title bar but keeps borders for all new windows in split layout
    for_window [app_id=".*"] border pixel 2

    # Gaps
    gaps outer 6
    gaps inner 5

    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between split and tabbed
    bindsym $mod+t layout toggle split tabbed

    # Make the current focus fullscreen
    bindsym f11 fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+$altmod+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

    bindsym $mod+Shift+z border pixel 2
    bindsym $mod+Shift+x border normal

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    #bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    #bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"

    # man I want to use dwl so bad to get that sweet sweet
    # master-stack dynamic tiling...
}
bindsym $mod+r mode "resize"


#
# Utilities:
#
    # Special keys to adjust volume via Wireplumber
    bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_SINK@ toggle
    bindsym --locked XF86AudioLowerVolume exec wpctl set-volume -l 1.0 @DEFAULT_SINK@ 5%-
    bindsym --locked XF86AudioRaiseVolume exec wpctl set-volume -l 1.0 @DEFAULT_SINK@ 5%+
    bindsym --locked XF86AudioMicMute exec wpctl set-mute @DEFAULT_SOURCE@ toggle
    # Special keys to adjust brightness via brightnessctl
    bindsym --locked XF86MonBrightnessDown exec brightnessctl -q --min-value=4800 set 5%-
    bindsym --locked XF86MonBrightnessUp exec brightnessctl -q set 5%+
    # Special key to take a screenshot with grim
    bindsym Print exec $screenshot

# Set font for title bars
font pango:JetBrainsMono Nerd Font 12

### Startup Programs
exec ~/.config/startup/startup

### Must Include
include /etc/sway/config.d/*
