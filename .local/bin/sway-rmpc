#!/bin/sh

workspace="10"
program="rmpc - Music Player"

swaymsg -q workspace number "$workspace"

swaymsg -t get_tree | jq -e --arg ws "$workspace" --arg prog "$program" \
    '.. | select(.type? == "workspace" and .name == $ws) | .. | 
    select(.name? == $prog)' \
    > /dev/null 2>&1 || exec "$TERMINAL" -T "$program" -e rmpc
